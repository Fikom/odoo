<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- actions opening views on models -->

    <!-- Sale Order Report Action -->
    <record id="action_report_mysaleorder" model="ir.actions.report">
        <field name="name">My Sales Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">myreports.report_mysaleorder</field>
        <field name="report_file">myreports.report_mysaleorder</field>
        <!--<field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>-->
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="myreports.mypaperformat"/>
        <!-- <field name="company_id">2</field> -->
    </record>

    <!-- Invoice Report Action -->
