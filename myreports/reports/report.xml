        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="myreports.mypaperformat"/>
    </record>

    <!-- Picking List Report Action -->
    <record id="action_report_mypickinglist" model="ir.actions.report">
        <field name="name">My Delivery Slip</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">myreports.report_mypickinglist</field>
        <field name="report_file">myreports.report_mypickinglist</field>
